<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

    <TextView
        android:id="@+id/layout_simple_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/layout_simple_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_delete_black"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/layout_simple_item_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layout_simple_item_delete_button"
        android:src="@drawable/ic_action_edit_black"
        android:visibility="gone"/>

</RelativeLayout>