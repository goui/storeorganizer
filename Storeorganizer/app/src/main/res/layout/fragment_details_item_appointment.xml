<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/fragment_details_item_appointment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/fragment_details_item_appointment_start_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccentPale"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <View
                android:id="@+id/fragment_details_item_appointment_start_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fragment_details_item_appointment_start_time_text_view"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/fragment_details_item_appointment_clients_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_details_item_appointment_start_separator"
                android:layout_marginTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_details_item_appointment_clients_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_details_item_appointment_clients_name_text_view"
                android:layout_marginTop="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_details_item_appointment_task_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_details_item_appointment_clients_phone_text_view"
                android:layout_marginTop="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_details_item_appointment_task_duration_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_details_item_appointment_task_name_text_view"
                android:layout_marginTop="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <View
                android:id="@+id/fragment_details_item_appointment_end_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fragment_details_item_appointment_task_duration_text_view"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/fragment_details_item_appointment_end_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_details_item_appointment_end_separator"
                android:background="@color/colorAccentPale"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>